# Auto Config Settings
CONFIG_SUBSYSTEM_AUTOCONFIG_FSBL=y
CONFIG_SUBSYSTEM_AUTOCONFIG_PMUFW=y
CONFIG_SUBSYSTEM_AUTOCONFIG_DEVICE__TREE=y
CONFIG_SUBSYSTEM_AUTOCONFIG_KERNEL=y
CONFIG_SUBSYSTEM_AUTOCONFIG_U__BOOT=y

# Use UART1 on the Ultra96 - pins accessible on back edge of board
CONFIG_SUBSYSTEM_PMUFW_SERIAL_PSU_UART_1_SELECT=y
CONFIG_SUBSYSTEM_PMUFW_SERIAL_PSU_UART_0_SELECT=n
CONFIG_SUBSYSTEM_FSBL_SERIAL_PSU_UART_1_SELECT=y
CONFIG_SUBSYSTEM_FSBL_SERIAL_PSU_UART_0_SELECT=n
CONFIG_SUBSYSTEM_ATF_SERIAL_PSU_UART_1_SELECT=y
CONFIG_SUBSYSTEM_ATF_SERIAL_PSU_UART_0_SELECT=n
CONFIG_SUBSYSTEM_SERIAL_PSU_UART_1_SELECT=y
CONFIG_SUBSYSTEM_SERIAL_PSU_UART_0_SELECT=n
CONFIG_SUBSYSTEM_SERIAL_PMUFW_IP_NAME="psu_uart_1"
CONFIG_SUBSYSTEM_SERIAL_FSBL_IP_NAME="psu_uart_1"
CONFIG_SUBSYSTEM_SERIAL_IP_NAME="psu_uart_1"
CONFIG_SUBSYSTEM_MACHINE_NAME="avnet-ultra96-rev1"
CONFIG_SUBSYSTEM_UBOOT_CONFIG_TARGET=""

# u-boot Configuration
CONFIG_SUBSYSTEM_UBOOT_CONFIG_PETALINUX=n
CONFIG_SUBSYSTEM_UBOOT_CONFIG_OTHER=y

# Boot from SD card
CONFIG_SUBSYSTEM_ROOTFS_INITRAMFS=n
CONFIG_SUBSYSTEM_ROOTFS_INITRD=n
CONFIG_SUBSYSTEM_ROOTFS_EXT4=y
CONFIG_SUBSYSTEM_SDROOT_DEV="/dev/mmcblk0p2"

CONFIG_YOCTO_MACHINE_NAME="ultra96-zynqmp"

# Bootargs: those generated by PetaLinux 2019.2 are fine, but if you want to use custom bootargs, then
# you need to uncomment the lines below and set as desired.
#CONFIG_SUBSYSTEM_BOOTARGS_AUTO=n
#CONFIG_SUBSYSTEM_USER_CMDLINE="earlycon console=ttyPS0,115200 clk_ignore_unused root=/dev/mmcblk0p2 rw rootwait"

# Ethernet port configs
CONFIG_SUBSYSTEM_ETHERNET_PSU_ETHERNET_3_SELECT=n
CONFIG_SUBSYSTEM_ETHERNET_PSU_ETHERNET_2_SELECT=n
CONFIG_SUBSYSTEM_ETHERNET_PSU_ETHERNET_1_SELECT=n
CONFIG_SUBSYSTEM_ETHERNET_PSU_ETHERNET_0_SELECT=y
CONFIG_SUBSYSTEM_ETHERNET_MANUAL_SELECT=n
#CONFIG_SUBSYSTEM_ETHERNET_PSU_ETHERNET_0_MAC_AUTO=n
#CONFIG_SUBSYSTEM_ETHERNET_PSU_ETHERNET_0_MAC="00:0a:35:00:01:22"
#CONFIG_SUBSYSTEM_ETHERNET_PSU_ETHERNET_0_USE_DHCP=y
